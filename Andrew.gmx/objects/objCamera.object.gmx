            <string>///move with player
//init
var dir = "";
//for now, just position on the player
if (instance_exists(objPlayer)){
    //get player direction
    dir = objPlayer.spriteDirection;
    //get player pos
    pPosx = objPlayer.x;
    pPosy = objPlayer.y;
}

//offset
if (dir != ""){
    switch(dir){
        case "left":
            viewOffset -= point_distance(x,y,pPosx+xoffset-maxViewOffset,pPosy)/8;
            if viewOffset &lt; -maxViewOffset viewOffset = -maxViewOffset;
            break;
        case "right":
            viewOffset += point_distance(x,y,pPosx+xoffset+maxViewOffset,pPosy)/8;
            if viewOffset &gt; maxViewOffset viewOffset = maxViewOffset;
            break;
    }
}

//set position to player
x = pPosx + xoffset + viewOffset;
y = pPosy;
</string>
